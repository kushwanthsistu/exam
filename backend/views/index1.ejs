<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Syam SriBalaji T">
    <title>QuickTest</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

    <script>
        const BACKEND_URL = "<%= process.env.BACKEND_URL %>";
        const FRONTEND_URL = "<%= process.env.FRONTEND_URL %>";
    </script>

    <script defer src="/index1.js"></script>
</head>
<body class="vh-100 d-flex flex-column overflow-hidden">
    <div class="d-flex justify-content-center align-items-center bg-dark rounded mb-2">
        <h1 class="text-white"> <%= data.title %> </h1>
    </div>
    
    <div class="d-grid" style="grid-template-columns: 120px 1fr;">
        <!-- Section row -->
        <div class="d-flex align-items-center justify-content-center bg-dark rounded mb-2">
            <h5 class="text-white">Section</h5>
        </div>
        <div id="sectionsBar" class="d-flex overflow-auto align-items-center mb-2" style="white-space: nowrap;">
            <% for(let i = 0 ; i < data.sections.length ; i++) { %>
                <button class="subjectbuttons btn btn-secondary m-2" id="section<%= i %>"> section<%= i+1 %> - <%= data.sections[i].subject %> </button>
            <% } %>
        </div>

        <!-- Questions row -->
        <div class="d-flex align-items-center justify-content-center bg-dark rounded mb-2">
            <h5 class="text-white">Question</h5>
        </div>
        <div id="sectionBlock" class="d-flex overflow-auto align-items-center mb-2" style="white-space: nowrap;">
            <% for(let i = 0 ; i < data.sections.length ; i++) { %>
                <div id=<%= `section${i}Questions` %> style="display : none">
                    <% for(let j = 1 ; j <= data.sections[i].questionsCount ; j++) { %>
                        <button class="questionButtons btn btn-secondary m-2" id=<%= `section${i}Question_${j}` %>><%= j %></button>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <div id="questionBlock" class="d-flex flex-column flex-grow-1 h-100 overflow-auto" style="min-height: 0;">
        
    </div>

    <div class="bottom-part row bg-dark p-2">
        <div class="col-12 d-flex justify-content-center mb-2">
            <button id="uploadButton" type="button" class="btn btn-primary">Launch Test</button>
        </div>
    </div>
</body>
</html>